<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"

    android:background="@android:color/background_light"
    tools:context=".JournalActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Journal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editJournalEntry"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/textTitle"
        android:layout_marginTop="16dp"
        android:hint="Write about your day..."
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:backgroundTint="@color/colorAccent"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Save Entry"
        android:layout_below="@id/editJournalEntry"
        android:layout_marginTop="16dp"
        android:background="@color/Lavender"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="View all Entries"
        android:layout_below="@id/buttonSave"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="@color/Lavender"
        android:textColor="@android:color/white"/>

</RelativeLayout>